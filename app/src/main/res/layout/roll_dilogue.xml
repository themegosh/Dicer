<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="fill_parent"
android:layout_height="fill_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtRollTotal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/rollResultTextSize"
        android:visibility="visible"
        android:text="6"
        android:layout_marginLeft="@dimen/rollResultMargins"
        android:layout_marginRight="@dimen/notification_subtext_size" />



    <ScrollView android:id="@+id/scrollViewPopup" android:scrollbars="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_below="@+id/txtRollTotal"
        android:layout_centerHorizontal="true">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1d6: (6)"
                android:id="@+id/txtSequenceData"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>